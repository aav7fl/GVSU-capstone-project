@using Microsoft.AspNet.Identity

@model Web.Models.VolunteerViewModel
@{
    ViewBag.Title = "Volunteer profile";
}

@if (Request.IsAuthenticated)
{
    @Html.AntiForgeryToken()
        <div class="container" style="font-size: 20px; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">
            <div class="row" style="margin-top:50px;margin-bottom:50px;margin-left:auto; margin-right:auto;">
                <div class="col-sm-6" style="margin:auto;width:250px;height:250px;background-color:orange;color:white;font-size:200px;border-radius: 20%;text-align:center; line-height: 250px;">@Model.Volunteer.FirstName[0]</div>
                <div class="col-sm-6">
                    <h2 style="bottom:0px;">
                        @Html.Label(String.Empty, Model.Volunteer.FirstName + " " + Model.Volunteer.LastName)
                        <button class="btn" style="background-color:azure;">
                            @Html.ActionLink(" Edit", "Edit", null, new { @class = "glyphicon glyphicon-edit" })
                        </button>
                    </h2>
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Hours, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DisplayFor(m => m.Hours, null, "Hours", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br/>
            <div class="form-group row">
                @Html.LabelFor(m => m.Rating, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DisplayFor(m => m.Rating, null, "Rating", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <br/>
            <div class="form-group row">
                @Html.LabelFor(m => m.ShortDescription, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.DisplayFor(m => m.ShortDescription, null, "Short Description", new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
}
else
{
    @Html.ActionLink("Please Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
} 