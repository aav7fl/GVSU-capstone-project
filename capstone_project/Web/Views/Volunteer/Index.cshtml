@using Microsoft.AspNet.Identity

@model Web.Models.VolunteerViewModel
@{
    ViewBag.Title = "Volunteer profile";
}

@if (Request.IsAuthenticated)
{
    @Html.AntiForgeryToken()
        <div id="profile-content" class="container" style="margin-top: 20px">

            <div class="row profile">

                <div class="col-sm-3">

                    <div class="row" style="text-align: center;">
                        <div class="col-xs-7 col-sm-12">
                            <img class="profile-image" style="border-radius: 50%; margin: auto; max-width: 200px; width: 100%;" src="https://media.licdn.com/mpr/mpr/shrinknp_200_200/AAEAAQAAAAAAAALRAAAAJDk1NmU2OGVjLTBmOTEtNGMxZi04NTBiLWNhNDcwMGU3MWEwMA.jpg">
                        </div>
                        <div class="col-sm-offset-1"><h1>@Model.Volunteer.FirstName @Model.Volunteer.LastName</h1></div>


                        <div class="col-xs-5 col-sm-12">
                            <h3>General Information</h3>

                            <ul class="profile-details">
                                <li>
                                    <div><i class="fa fa-briefcase"></i> position</div>
                                    Student
                                </li>
                                <li>
                                    <div><i class="fa fa-building-o"></i> company</div>
                                    Grand Valley State University
                                </li>
                            </ul>

                            <h3>Contact Information</h3>

                            <ul class="profile-details">
                                <li>
                                    <div><i class="fa fa-phone"></i> phone</div>
                                    +48 123 456 789
                                </li>
                                <li>
                                    <div><i class="fa fa-tablet"></i> mobile phone</div>
                                   (616) 331-5000
                                </li>
                                <li>
                                    <div><i class="fa fa-envelope"></i> e-mail</div>
                                    xinyi@google.com
                                </li>
                                <li>
                                    <div><i class="fa fa-map-marker"></i> address</div>
                                    1 Campus Drive<br />
                                    Allendale, MI 49401<br />
                                </li>
                            </ul>
                        </div>
                    </div><!--/row-->

                </div><!--/col-->

                <div class="col-sm-9">
                    
                    <ul class="nav nav-tabs" id="myTab">
                        <li><a data-toggle="tab" href="#skills">Skills</a></li>
                        <li><a data-toggle="tab" href="#charities">Charities</a></li>
                        <li class="active"><a data-toggle="tab" href="#badges">Badges</a></li>
                    </ul>

                    <div class="tab-content">
                        <div class="tab-pane" id="skills">

                            <div class="row">
                                <div class="col-sm-7">
                                    <h2>My Skills</h2>
                                    <ul class="skill-bar">
                                        <li>
                                            <h5>Web Design</h5>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40"
                                                     aria-valuemin="0" aria-valuemax="100" style="width:40%">
                                                    40%
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <h5>Technical Writing</h5>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="80"
                                                     aria-valuemin="0" aria-valuemax="100" style="width:80%">
                                                    80%
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <h5>Consulting</h5>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="80"
                                                     aria-valuemin="0" aria-valuemax="100" style="width:80%">
                                                    80%
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <h5>Teaching</h5>
                                            <div class="progress">
                                                <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="80"
                                                     aria-valuemin="0" aria-valuemax="100" style="width:80%">
                                                    80%
                                                </div>
                                            </div>
                                        </li>

                                    </ul>
                                    <br />
                                    <h2>My Causes</h2>
                                    <canvas id="canvas" class="chartjs" height="400" width="400"></canvas>
                                </div><!--/col-->

                            </div><!--/row-->

                        </div>
                        <div class="tab-pane" id="charities">
                            <div class="container" style="margin: 30px;">
                                <div class="col-sm-3 charity-container">
                                    <div class="charity">
                                        <label style="border-bottom: 2px solid #323A45;">BitCamp GR</label>
                                        <br />
                                        <br />
                                        <a href="#">
                                            <img style="max-width:100px;" src="http://static1.squarespace.com/static/545b7fcbe4b04d305f6d1006/t/562bd82ae4b079eaf388f716/1458228758706/?format=1500w" />
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="container" style="margin: 30px;">
                                <div class="col-sm-3 charity-container">
                                    <div class="charity">
                                        <label style="border-bottom: 2px solid #323A45;">Red Cross</label>
                                        <br />
                                        <br />
                                        <a href="#">
                                            <img style="max-width:100px;" src="https://www.pembrokemall.com/media/1075/American-Red-Cross.jpg"/>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <div class="container" style="margin: 30px;">
                                <div class="col-sm-3 charity-container">
                                    <div class="charity">
                                        <label style="border-bottom: 2px solid #323A45;">Gamers Outreach</label>
                                        <br />
                                        <br />
                                        <a href="#">
                                            <img style="max-width:100px;" src="http://gowcharity.com/wp-content/uploads/2011/12/gamersoutreachlogo2.jpg" />
                                        </a>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <div class="tab-pane active" id="badges">
                            @{Html.RenderPartial("_Badges");}
                        </div>
                    </div>

                </div><!--/col-->

            </div><!--/profile-->
        </div>
   
