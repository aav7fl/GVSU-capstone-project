        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
            @Scripts.Render("~/bundles/volunteer")
        }
        @section styles {
            @Styles.Render("~/Content/volunteer")    
        }
}
else
{
    @Html.ActionLink("Please Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
} 